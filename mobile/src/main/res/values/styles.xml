<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Reactive" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:buttonStyle">@style/Theme.Reactive.Button</item>
    </style>

    <style name="Theme.Reactive.Dark" parent="Theme.Reactive">
        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColorHint">@color/accent</item>

        <item name="colorButtonNormal">@color/primaryDark</item>
        <item name="android:colorButtonNormal">@color/primaryDark</item>
    </style>

    <style name="Theme.Reactive.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
